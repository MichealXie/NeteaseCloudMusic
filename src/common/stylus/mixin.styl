  @import "../../common/stylus/variable"
  
// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

//默认字体颜色
default-font()
  font-size $font-size-small
  color $default-text
  font-weight 350
  padding 4px 8px
  line-height: $font-size-medium-x

//不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space:nowrap