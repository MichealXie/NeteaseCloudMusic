  @import "../../common/stylus/variable"
  
// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

//默认字体颜色
default-font()
  font-size $font-size-small
  color $default-text
  font-weight 350
  padding 4px 8px
  line-height: $font-size-medium-x

default-singer()
  font-size $font-size-small-s
  color $not-important

song-name()
  color black
  font-size $font-size-medium
  padding 5px 0
  font-weight 350

//不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space:nowrap

//一个物体居中
flex-center()
  display flex
  align-items: center
  justify-content: center

border-1px()
  box-shadow: inset 0px -1px 1px -1px #c8c7cc;

dark-cover()
  &:before
    content ""
    display block 
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.3)

gradient-cover()
  &:before
    content: ""
    position: absolute;
    top: 0;
    box-sizing: border-box;
    width: 100%;
    // 为了兼容图片间的间隙
    height: 99%;
    background: linear-gradient(180deg, rgba(0, 0, 0, .2) 0, transparent 40%, transparent 60%, rgba(0, 0, 0, .3));
    transition: .4s;